    <Command name="xray.minimize"
             description="Starting up the command line interface."
             fileType="XYZ PDB"
             action="NONE">

        <Option name="Eps"
                flag="e"
                description="RMS gradient convergence criteria (negative: automatically determine based on refinement type)."
