<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
         http://maven.apache.org/maven-v4_0_0.xsd">
  <artifactId>ffx-potential</artifactId>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>${antrun.version}</version>
        <executions>
          <execution>
            <id>compile</id>
            <phase>compile</phase>
            <configuration>
              <target>
                <taskdef name="groovyc" classname="org.codehaus.groovy.ant.Groovyc">
                  <classpath refid="maven.compile.classpath"/>
                </taskdef>
                <mkdir dir="${project.build.outputDirectory}"/>
                <groovyc destdir="${project.build.outputDirectory}" srcdir="${basedir}/src/main/groovy/"
                         listfiles="false" verbose="false" targetBytecode="${targetVersion}" stacktrace="true"
                         parameters="true">
                  <classpath refid="maven.compile.classpath"/>
                </groovyc>
                <!-- configscript="${basedir}/src/config/config.groovy" -->
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>${exec.version}</version>
        <executions>
          <execution>
            <id>generateManPages</id>
            <phase>process-classes</phase>
            <goals>
              <goal>java</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <includeProjectDependencies>true</includeProjectDependencies>
          <includePluginDependencies>true</includePluginDependencies>
          <mainClass>picocli.codegen.docgen.manpage.ManPageGenerator</mainClass>
          <arguments>
            <argument>--outdir=${project.parent.basedir}/src/site/asciidoc/commands</argument>
            <argument>ffx.potential.groovy.Biotype</argument>
            <argument>ffx.potential.groovy.Cart2Frac</argument>
            <argument>ffx.potential.groovy.ChainBreaks</argument>
            <argument>ffx.potential.groovy.ImportCIF</argument>
            <argument>ffx.potential.groovy.Density</argument>
            <argument>ffx.potential.groovy.Energy</argument>
            <argument>ffx.potential.groovy.ExportQE</argument>
            <argument>ffx.potential.groovy.Fasta</argument>
            <argument>ffx.potential.groovy.FeatureMap</argument>
            <argument>ffx.potential.groovy.Frac2Cart</argument>
            <argument>ffx.potential.groovy.MoveIntoUnitCell</argument>
            <argument>ffx.potential.groovy.PrepareSpaceGroups</argument>
            <argument>ffx.potential.groovy.SaveAsP1</argument>
            <argument>ffx.potential.groovy.SaveAsPDB</argument>
            <argument>ffx.potential.groovy.SaveAsXYZ</argument>
            <argument>ffx.potential.groovy.Solvator</argument>
            <argument>ffx.potential.groovy.Timer</argument>
            <argument>ffx.potential.groovy.Volume</argument>
            <argument>ffx.potential.groovy.VolumeArc</argument>
            <argument>ffx.potential.groovy.WriteRestraints</argument>
            <argument>ffx.potential.groovy.test.CoordShakeEnergy</argument>
            <argument>ffx.potential.groovy.test.EnergyOpenMM</argument>
            <argument>ffx.potential.groovy.test.Gradient</argument>
            <argument>ffx.potential.groovy.test.LambdaGradient</argument>
            <argument>ffx.potential.groovy.test.MultiRes</argument>
            <argument>ffx.potential.groovy.test.MultiTopTimer</argument>
            <argument>ffx.potential.groovy.test.PhEnergy</argument>
            <argument>ffx.potential.groovy.test.PhGradient</argument>
            <argument>ffx.potential.groovy.test.PrmToProperty</argument>
            <argument>ffx.potential.groovy.test.ReorderAtoms</argument>
            <argument>ffx.potential.groovy.test.RGNtoPDB</argument>
            <argument>ffx.potential.groovy.test.SaveAsConstantPhPDB</argument>
            <argument>ffx.potential.groovy.test.Tornado</argument>
          </arguments>
        </configuration>
        <dependencies>
          <dependency>
            <groupId>info.picocli</groupId>
            <artifactId>picocli-codegen</artifactId>
            <version>${picocli.version}</version>
            <type>jar</type>
          </dependency>
        </dependencies>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <executions>
          <execution>
            <id>default-compile</id>
            <configuration>
              <compilerArgs>
                <arg>-Xlint:all,-serial,-processing,-this-escape</arg>
                <arg>-ApropertyDir=${project.parent.basedir}/src/site/asciidoc/properties</arg>
                <arg>-proc:full</arg>
                <arg>--add-modules</arg>
                <arg>jdk.incubator.vector</arg>
              </compilerArgs>
              <annotationProcessorPaths>
                <path>
                  <groupId>${project.groupId}</groupId>
                  <artifactId>ffx-utilities</artifactId>
                  <version>${project.version}</version>
                </path>
              </annotationProcessorPaths>
            </configuration>
          </execution>
        </executions>
        <version>${compiler.version}</version>
      </plugin>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>${resources.version}</version>
        <executions>
          <execution>
            <id>copy-groovy-scripts</id>
            <phase>compile</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${basedir}/../../groovy</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/src/main/groovy/ffx/potential/groovy</directory>
                  <includes>
                    <include>*</include>
                  </includes>
                </resource>
              </resources>
              <overwrite>true</overwrite>
            </configuration>
          </execution>
          <execution>
            <id>copy-groovy-scripts-website</id>
            <phase>site</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${basedir}/target/site/resources/script</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/src/main/groovy/ffx/potential/groovy</directory>
                  <includes>
                    <include>*</include>
                  </includes>
                </resource>
              </resources>
              <overwrite>true</overwrite>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
    <resources>
      <resource>
        <directory>${basedir}/src/main/java/ffx/potential/parameters/ff
        </directory>
        <includes>
          <include>*</include>
        </includes>
        <targetPath>ffx/potential/parameters/ff</targetPath>
      </resource>
    </resources>
  </build>
